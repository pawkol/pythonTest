pipeline {
    agent { label 'linux' }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Scan') {
            steps {
                script {
                    // Get the path to SonarQube Scanner installation directory
                    def scannerHome = tool 'SonarQubeScanner';
                    echo "SonarQube Scanner installation directory: ${scannerHome}"
    
                    withSonarQubeEnv('sq1') {
                        // Użycie zmiennej scannerHome, zamiast pisania komendy bezpośrednio
                        sh "${scannerHome}/bin/sonar-scanner -Dsonar.projectKey=your_project_key -Dsonar.sources=. -Dsonar.language=py -Dsonar.sourceEncoding=UTF-8"
                    }
                }
            }
        }
    }
}


