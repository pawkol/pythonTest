pipeline {
    agent { label 'linux' }
    options {
        buildDiscarder(logRotator(numToKeepStr: '5'))
    }
    stages {
        stage('Scan') {
            steps {
                withSonarQubeEnv(installationName: 'sq1') {
                    // Zakładam, że używasz `sonar-scanner`, więc możesz dostosować komendę w zależności od swojego projektu
                    sh 'sonar-scanner -Dsonar.projectKey=your_project_key -Dsonar.sources=. -Dsonar.language=py -Dsonar.sourceEncoding=UTF-8'
                }
            }
        }
    }
}

